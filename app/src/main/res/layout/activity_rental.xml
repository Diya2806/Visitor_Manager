<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Rental">

    <LinearLayout
        android:id="@+id/main"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:id="@+id/custom_navbar"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:background="@drawable/nav"
            android:elevation="8dp">

            <LinearLayout
                android:layout_width="200sp"
                android:layout_height="match_parent"
                android:layout_marginLeft="25sp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Hello"
                    android:paddingTop="20sp"
                    android:id="@+id/rentname"
                    android:textColor="@color/dar_blue"
                    android:fontFamily="cursive"
                    android:textStyle="italic"

                    android:textSize="30sp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:orientation="horizontal">
                <ImageView
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:layout_marginLeft="50sp"
                    android:layout_marginTop="25sp"
                    android:id="@+id/menu_rental"
                    android:src="@drawable/menus__1_"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"

            android:layout_marginTop="20sp"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:paddingLeft="20sp"
                    android:paddingRight="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30sp"
                        android:textSize="20sp"
                        android:text="House Owner Name"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="48sp"
                        android:id="@+id/name_landlord"
                        android:paddingLeft="20sp"
                        android:hint="House Owner Name"
                        android:textColorHint="@color/dar_blue"
                        android:textColor="@color/dar_blue"
                        android:background="@drawable/inpute_visitor"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30sp"
                        android:layout_marginTop="10sp"
                        android:text="house Owner Moblie Number"
                        android:textSize="20sp"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="48sp"
                        android:hint="Moblie"
                        android:background="@drawable/inpute_visitor"
                        android:paddingLeft="20sp"
                        android:textColorHint="@color/dar_blue"
                        android:inputType="number"
                        android:id="@+id/number_landlord"
                        android:maxLength="10"
                        android:textColor="@color/dar_blue"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30sp"
                        android:textSize="20sp"
                        android:text="House renatal Name"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="48sp"
                        android:id="@+id/name_rent"
                        android:paddingLeft="20sp"
                        android:hint="House Rental Name"
                        android:textColorHint="@color/dar_blue"
                        android:textColor="@color/dar_blue"
                        android:background="@drawable/inpute_visitor"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30sp"
                        android:layout_marginTop="10sp"
                        android:text="house rental Moblie Number"
                        android:textSize="20sp"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="48sp"
                        android:hint="Moblie"
                        android:background="@drawable/inpute_visitor"
                        android:paddingLeft="20sp"
                        android:textColorHint="@color/dar_blue"
                        android:inputType="number"
                        android:id="@+id/number_rent"
                        android:maxLength="10"
                        android:textColor="@color/dar_blue"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30sp"
                        android:layout_marginTop="10sp"
                        android:textSize="20sp"
                        android:text="Block"/>
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="48sp"
                        android:paddingLeft="20sp"
                        android:background="@drawable/inpute_visitor"
                        android:entries="@array/block"
                        android:id="@+id/block_rent"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30sp"
                        android:text="Block Number"
                        android:layout_marginTop="10sp"
                        android:textSize="20sp"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="48sp"
                        android:inputType="number"
                        android:background="@drawable/inpute_visitor"
                        android:hint="Block Number"
                        android:maxLength="3"
                        android:paddingLeft="20sp"
                        android:id="@+id/Block_number_rent"
                        android:textColorHint="@color/dar_blue"
                        android:textColor="@color/dar_blue"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30sp"
                        android:text="No of Vehical"
                        android:layout_marginTop="10sp"
                        android:textSize="20sp"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="48sp"
                        android:background="@drawable/inpute_visitor"
                        android:hint="no of Vehical"
                        android:paddingLeft="20sp"
                        android:inputType="number"
                        android:maxLength="1"
                        android:id="@+id/vehical_number_rent"
                        android:textColorHint="@color/dar_blue"
                        android:textColor="@color/dar_blue"/>


                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40sp"
                        android:backgroundTint="@color/light_green"
                        android:text="ADD Visitor"
                        android:textSize="20sp"
                        android:id="@+id/rentVisitorbtn"
                        android:textColor="@color/dar_blue"
                        />
                </LinearLayout>
            </ScrollView>

        </LinearLayout>
    </LinearLayout>
    <include
        layout="@layout/activity_slider"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start" />
</androidx.drawerlayout.widget.DrawerLayout>