
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home_pages">

    <LinearLayout
        android:id="@+id/main"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/custom_navbar"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"

            android:layout_alignParentBottom="true"
            android:background="@drawable/nav"
            android:elevation="8dp">

            <LinearLayout
                android:layout_width="200sp"
                android:layout_height="match_parent"
                android:layout_marginLeft="25sp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="200sp"
                    android:layout_height="match_parent"
                    android:text="Hello"
                    android:textColor="@color/dar_blue"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="cursive"
                    android:textStyle="italic"
                    android:paddingTop="20sp"
                    android:id="@+id/homename"
                    android:textSize="30sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:orientation="horizontal">
                <ImageView
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                  android:layout_marginLeft="50sp"
                    android:layout_marginTop="25sp"
                    android:id="@+id/menu"
                    android:src="@drawable/menus__1_"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:paddingTop="20sp"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="310sp"
                android:layout_height="90sp"
                android:id="@+id/addvisitor_card"
                app:cardBackgroundColor="@color/light_green"
                app:cardCornerRadius="20sp"
                android:layout_marginLeft="25sp">
                <ImageView
                    android:layout_width="90sp"
                    android:layout_height="80sp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/traveler"/>

                <TextView
                    android:layout_width="220sp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="90sp"
                    android:text="Add Visitor"
                    android:textColor="@color/dar_blue"
                    android:textSize="20sp"
                    android:paddingTop="30sp"
                    android:paddingLeft="20sp"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="310sp"
                android:id="@+id/visitor_out_card"
                android:layout_height="90sp"
                android:layout_marginTop="20sp"
                app:cardBackgroundColor="@color/light_green"
                app:cardCornerRadius="20sp"
                android:layout_marginLeft="25sp">
                <ImageView
                    android:layout_width="90sp"
                    android:layout_height="80sp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/visitor_out"/>

                <TextView
                    android:layout_width="220sp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="90sp"
                    android:text="out time Visitor"
                    android:textColor="@color/dar_blue"
                    android:textSize="20sp"
                    android:paddingTop="30sp"
                    android:paddingLeft="20sp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="310sp"
                android:id="@+id/dailyvisitor_card"
                android:layout_height="90sp"
                android:layout_marginTop="20sp"
                app:cardBackgroundColor="@color/light_green"
                app:cardCornerRadius="20sp"
                android:layout_marginLeft="25sp">
                <ImageView
                    android:layout_width="90sp"
                    android:layout_height="80sp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/visitor"/>

                <TextView
                    android:layout_width="220sp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="90sp"
                    android:text="Visitor List"
                    android:textColor="@color/dar_blue"
                    android:textSize="20sp"
                    android:paddingTop="30sp"
                    android:paddingLeft="20sp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="310sp"
                android:id="@+id/houseowner_card"
                android:layout_height="90sp"
                android:layout_marginTop="20sp"
                app:cardBackgroundColor="@color/light_green"
                app:cardCornerRadius="20sp"
                android:layout_marginLeft="25sp">
                <ImageView
                    android:layout_width="90sp"
                    android:layout_height="80sp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/visitors"/>

                <TextView
                    android:layout_width="220sp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="90sp"
                    android:text="new House owner"
                    android:textColor="@color/dar_blue"
                    android:textSize="20sp"
                    android:paddingTop="30sp"
                    android:paddingLeft="20sp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="310sp"
                android:id="@+id/rental_house_card"
                android:layout_height="90sp"
                android:layout_marginTop="20sp"
                app:cardBackgroundColor="@color/light_green"
                app:cardCornerRadius="20sp"
                android:layout_marginLeft="25sp">
                <ImageView
                    android:layout_width="90sp"
                    android:layout_height="80sp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/house"/>

                <TextView
                    android:layout_width="220sp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="90sp"
                    android:text="new rental house"
                    android:textColor="@color/dar_blue"
                    android:textSize="20sp"
                    android:paddingTop="30sp"
                    android:paddingLeft="20sp"/>

            </androidx.cardview.widget.CardView>



        </LinearLayout>

    </LinearLayout>

    <include
        layout="@layout/activity_slider"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start" />


</androidx.drawerlayout.widget.DrawerLayout>